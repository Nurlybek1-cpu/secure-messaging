# ============================================
# Secure Messaging Application Configuration
# ============================================

# Application Settings
APP_NAME=SecureMessaging
DEBUG=False

# SECURITY WARNING: Generate strong random secrets!
# Use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-must-be-at-least-32-characters-long
JWT_SECRET_KEY=your-jwt-secret-change-this-must-be-at-least-32-characters-long

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///./secure_messaging.db

# For production (PostgreSQL - uncomment and configure)
# DATABASE_URL=postgresql://username:password@localhost:5432/secure_messaging

# JWT Token Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing (Argon2id Parameters)
# OWASP Recommended Minimums
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=4

# Production: Increase these based on your server capacity
# ARGON2_TIME_COST=3
# ARGON2_MEMORY_COST=131072

# CORS Settings (if deploying web frontend)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting (future enhancement)
# RATE_LIMIT_ENABLED=True
# RATE_LIMIT_PER_MINUTE=60

# Logging
# LOG_LEVEL=INFO
# LOG_FILE=logs/app.log
